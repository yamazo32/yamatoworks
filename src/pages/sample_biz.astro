            <td><img src={`${import.meta.env.BASE_URL}img/biz-yoko/006_off.png`} alt="" /></td>
          </tr>
          <tr>
            <td><img src={`${import.meta.env.BASE_URL}img/biz-yoko/007_off.png`} alt="" /></td>
            <td><img src={`${import.meta.env.BASE_URL}img/biz-yoko/008_off.png`} alt="" /></td>
          </tr>
        </table>
      </div><!-- sample-yoko -->
      <hr />
      <div class="sample-tate">
        <h3 class="brackets-title">縦サンプル</h3>
        <table>
          <tr>
            <td><img src={`${import.meta.env.BASE_URL}img/biz-tate/001_off.png`} alt="" /></td>
