            <td><img src={`${import.meta.env.BASE_URL}img/biz-tate/006_off.png`} alt="" /></td>
          </tr>
        </table>
      </div><!-- sample-tate -->
    </div><!-- /.wrapper -->
  </div><!-- /.stage -->
</BaseLayout>
